<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginBottom="8dp"
    android:background="#f0f0f0">

    <TextView
        android:id="@+id/tvPlayerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên Hội Viên"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvPlayerCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã: MBRXXX"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvPlayerHometown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quê quán: Hà Nội"
        android:textSize="14sp" />
    <!-- Bạn có thể thêm các TextView khác để hiển thị thêm thông tin -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnEditPlayer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sửa"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/btnDeletePlayer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Xóa"
            android:backgroundTint="@android:color/holo_red_light"
            android:layout_marginStart="4dp"/>
    </LinearLayout>

</LinearLayout>