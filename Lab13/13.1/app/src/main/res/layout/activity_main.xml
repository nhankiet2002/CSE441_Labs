<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5576BE"
        android:text="Vui lòng chọn tỉnh/thành phố"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AutoCompleteTextView (Chọn 1):"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"/>

    <AutoCompleteTextView
        android:id="@+id/editauto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:completionThreshold="1"
        android:hint="Nhập tên tỉnh/thành phố"
        android:ems="10"
        android:layout_marginBottom="16dp">
        <requestFocus />
    </AutoCompleteTextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MultiAutoCompleteTextView (Chọn nhiều, cách nhau bởi dấu phẩy):"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"/>

    <MultiAutoCompleteTextView
        android:id="@+id/multiAutoCompleteTextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:completionThreshold="1"
        android:hint="Nhập các tỉnh/thành phố"
        android:ems="10" />

</LinearLayout>